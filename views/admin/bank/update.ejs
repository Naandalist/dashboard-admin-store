<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Bank</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
            <li class="breadcrumb-item active">Update bank</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title"><strong>Form update</strong></h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/bank/update/<%= bank._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="ownerName">Owner Name</label>
                  <input type="text" value="<%= bank.ownerName%>" class="form-control" name="ownerName" id="ownerName" placeholder="Enter owner name" required />
                </div>
                <div class="form-group">
                  <label for="bankName">Bank Name</label>
                  <input type="text" value="<%= bank.bankName%>" class="form-control" name="bankName" id="bankName" placeholder="Enter bank name" required />
                </div>
                <div class="form-group">
                  <label for="accountNumber">Account Number</label>
                  <input type="number" value="<%= bank.accountNumber%>" class="form-control" name="accountNumber" id="accountNumber" placeholder="Enter account number" required />
                </div>
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>